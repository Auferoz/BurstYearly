---
import { fade } from "astro:transitions";
import CheckupList from "../icons/CheckupList.astro";
import DeviceTv from "../icons/DeviceTv.astro";
import IconStar from "../icons/IconStar.astro";

const { movies = [] } = Astro.props;
---

{
    movies.map((item, index) => (
        <div class="relative mt-3">
            <!-- Badge fuera del overflow -->
            <div class="absolute -top-3 left-1/2 -translate-x-1/2 z-10 border-2 border-gray-700 bg-zinc-900 rounded-lg">
                <span class="FiraCodeFont text-xs text-white flex flex-row justify-center items-center gap-1 p-1">
                    <CheckupList width="16" height="16" /> {index + 1}
                </span>
            </div>


            <article class="flex flex-col justify-between relative rounded-xl border-2 border-gray-700 group hover:border-sky-700 overflow-hidden">
                <div class="absolute bottom-0 left-0 w-full h-7 bg-gray-900/70 z-2 hidden group-hover:flex">
                    <a href={item.movie.trailer} target="_blank">
                        <span class="FiraCodeFont text-xs text-white text-nowrap flex justify-center items-center gap-2 absolute -bottom-[-6px] -left-[-5px]">
                            <DeviceTv width="16" height="16" /> Ver Trailer
                        </span>
                    </a>
                </div>

                <!-- Botón Info para abrir modal -->
                <button 
                    class="btn-movie-info absolute top-2 right-2 z-10 p-1.5 bg-zinc-900/90 border border-gray-600 rounded-lg opacity-0 group-hover:opacity-100 hover:bg-sky-700 hover:border-sky-600 transition-all duration-200"
                    data-movie={JSON.stringify({
                        title: item.movie.title,
                        poster: `https://${item.movie.images?.poster?.[0] || ''}`,
                        logo: item.movie.images?.logo?.[0] ? `https://${item.movie.images.logo[0]}` : null,
                        banner: item.movie.images?.banner?.[0] ? `https://${item.movie.images.banner[0]}` : null,
                        fanart: item.movie.images?.fanart?.[0] ? `https://${item.movie.images.fanart[0]}` : null,
                        clearart: item.movie.images?.clearart?.[0] ? `https://${item.movie.images.clearart[0]}` : null,
                        thumb: item.movie.images?.thumb?.[0] ? `https://${item.movie.images.thumb[0]}` : null,
                        releaseDate: item.movie.released || null,
                        rating: item.user_rating,
                        runtime: item.movie.runtime,
                        genres: item.movie.genres,
                        overview: item.movie.overview,
                        trailer: item.movie.trailer,
                        actors: item.movie.actors || [],
                        director: item.movie.director || null,
                        country: item.movie.country || null
                    })}
                    aria-label={`Ver información de ${item.movie.title}`}
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </button>

                <img
                    src={`https://${item.movie.images?.poster?.[0] || ''}`}
                    alt={item.movie.title}
                    class="w-full h-full rounded-lg"
                    transition:name={`movie-poster-${item.movie.ids.trakt}`}
                    transition:animate={fade({ duration: '0.3s' })}
                />
                
                {item.user_rating && (
                    <div class="absolute bottom-2 right-2 z-10 border-2 border-gray-700 bg-zinc-900 rounded-lg hidden group-hover:flex">
                        <span class="FiraCodeFont text-xs text-white flex flex-row justify-center items-center gap-1 p-1">
                            <IconStar width="16" height="16" /> {item.user_rating}
                        </span>
                    </div>
                )}
            </article>
        </div>
    ))
}

<script is:inline>
    (function() {
        function initMovieInfoButtons() {
            document.querySelectorAll('.btn-movie-info').forEach(function(btn) {
                // Clone to remove old listeners
                var newBtn = btn.cloneNode(true);
                btn.parentNode.replaceChild(newBtn, btn);
                
                newBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    var movieData = JSON.parse(newBtn.getAttribute('data-movie') || '{}');
                    if (window.openModalViewed) {
                        window.openModalViewed(movieData);
                    }
                });
            });
        }

        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initMovieInfoButtons);
        } else {
            initMovieInfoButtons();
        }
        document.addEventListener('astro:after-swap', initMovieInfoButtons);
    })();
</script>
