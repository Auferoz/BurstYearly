---
const { years, currentYear, basePath, showAll = false } = Astro.props;
---

<div>
    <div class="flex flex-wrap gap-2" role="group">
        <a
            href={`${basePath}/ListAll`}
            class:list={[
                "px-3 py-1.5 sm:px-4 sm:py-2 text-xs sm:text-sm font-medium rounded-lg border transition-colors",
                "focus:z-10 focus:ring-2 focus:ring-sky-500 focus:outline-none",
                showAll
                    ? "bg-sky-600 text-white border-sky-600"
                    : "border-zinc-700 bg-zinc-800 text-zinc-300 hover:bg-zinc-700 hover:text-white"
            ]}
        >
            Todas
        </a>
        {years.map((y) => (
            <a
                href={`${basePath}/List${y}`}
                class:list={[
                    "px-3 py-1.5 sm:px-4 sm:py-2 text-xs sm:text-sm font-medium rounded-lg border border-zinc-700 transition-colors",
                    "focus:z-10 focus:ring-2 focus:ring-sky-500 focus:outline-none",
                    currentYear === y
                        ? "bg-sky-600 text-white border-sky-600"
                        : "bg-zinc-800 text-zinc-300 hover:bg-zinc-700 hover:text-white"
                ]}
            >
                {y}
            </a>
        ))}
    </div>
</div>
