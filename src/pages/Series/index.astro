---
import Layout from '../../layouts/Layout.astro';
import NavHeader from '../../components/NavHeader.astro';
import CardsSeriesList from '../../components/CardsSeriesList.astro';
import { getSeries } from '../../services/apiSeries.js';

const { series, error } = await getSeries();
---
<Layout title="BURST Series - My List Yearly">
    <main>

        <NavHeader />

        <div class="max-w-screen-xl max-w-7xl mx-auto p-4 pt-8">

            <h2 class="text-md lg:text-2xl font-bold text-white text-start mb-2 flex align-center items-center">
                <span class="">Lista de Series y Animes</span>
            </h2>

            <p class="FiraCodeFont mb-5">
                Total: {series.length} series
            </p>

            <div class="grid gap-2 grid-cols-2 sm:grid-cols-3 md:grid-cols-5 lg:grid-cols-6 xl:grid-cols-6">
                <CardsSeriesList series={series} />
            </div>
        </div>
    </main>
</Layout>
