---
import Layout from '../../layouts/Layout.astro';
import CardsSeriesList from '../../components/CardsSeriesList.astro';
import YearNavigation from '../../components/YearNavigation.astro';
import { getSeries } from '../../services/apiSeries.js';

const years = [2025, 2026];

const { series, error } = await getSeries();
---
<Layout title="BURST Series - My List Yearly">
    <main>

        <div class="max-w-screen-xl max-w-7xl mx-auto p-4 pt-8">

            <div class="flex flex-col xl:flex-row items-start xl:items-center justify-between gap-3 mb-5">

                <div>
                    <h2 class="text-md lg:text-2xl font-bold text-white text-start flex align-center items-center">
                        <span class="">Lista de Series y Animes (Todas)</span>
                    </h2>

                    <p class="FiraCodeFont">
                        <span class="font-bold">Total series:</span> {series.length}
                    </p>
                </div>

                <YearNavigation years={years} basePath="/Series" showAll={true} />

            </div>

            <div class="grid gap-2 grid-cols-2 sm:grid-cols-3 md:grid-cols-5 lg:grid-cols-6 xl:grid-cols-6">
                <CardsSeriesList series={series} />
            </div>
        </div>
    </main>
</Layout>
