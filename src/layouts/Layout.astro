---
import { ClientRouter } from "astro:transitions"
import NavHeader from "../components/NavHeader.astro"
import ModalViewed from "../components/ModalViewed.astro"
const { title } = Astro.props

// Supports weights 100-900
import '@fontsource-variable/montserrat';
// Supports weights 300-700
import '@fontsource-variable/fira-code';
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body>
		<NavHeader />
		<slot />
		<ModalViewed />
	</body>
</html>

<style is:global>
	@import "tailwindcss";
	@plugin "@tailwindcss/typography";

	html {
		font-family: 'Montserrat Variable', system-ui, sans-serif;
		@apply bg-zinc-900;
		color: #fff;
	}

	body { margin: 0; padding: 0; }
	body, body::before, body::after { box-sizing: border-box; }

	.FiraCodeFont {
		font-family: 'Fira Code Variable', monospace;
	}

    /* Status glow effects */
    .ongoing {
        box-shadow: 0 0 0 1px rgba(34, 197, 94, 0.3),
                    0 0 15px -3px rgba(34, 197, 94, 0.25);
        @apply border-green-700/40;
    }

    .ongoing:hover {
        box-shadow: 0 0 0 1px rgba(34, 197, 94, 0.5),
                    0 0 20px -3px rgba(34, 197, 94, 0.4);
        @apply border-green-600;
    }

    .completed {
        box-shadow: 0 0 0 1px rgba(14, 165, 233, 0.3),
                    0 0 15px -3px rgba(14, 165, 233, 0.25);
        @apply border-sky-700/40;
    }

    .completed:hover {
        box-shadow: 0 0 0 1px rgba(14, 165, 233, 0.5),
                    0 0 20px -3px rgba(14, 165, 233, 0.4);
        @apply border-sky-600;
    }
</style>
